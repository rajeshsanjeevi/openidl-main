pipeline {
    agent {
        node {
            label 'openidl'
        }
    }
    parameters {
        string defaultValue: '', description: 'Organization Name', name: 'org_name', trim:true
        string defaultValue: '', description: 'Node Type (aais | analytics | carrier)', name: 'node_type', trim: true
        string defaultValue: '', description: 'Environment (dev | test | prod)', name: 'env', trim: true
        }
    stages{
        stage('DeployOpenIDLSecrets'){
           steps {
                script {
                    org = params.org_name.substring(0,4)
                }
                wrap([$class: 'AnsiColorBuildWrapper', colorMapName: "xterm"]) {
                    ansibleTower(
                        towerServer: 'AWX',
                        towerCredentialsId: 'AWX',
                        templateType: 'job',
                        jobTemplate: "${org}-${params.env}-openidl-secrets-deploy",
                        jobType: "run",
                        towerLogLevel: 'full',
                        removeColor: false,
                        async: false,
                        importTowerLogs: true,
                        extraVars: """---
                        org_name: '${params.org_name}'
                        node_type: '${params.node_type}'
                        env: '${params.env}'
                        git_branch: '${params.git_branch}'
                        git_repository: '${params.git_repository}'
                        vault_secret_name: '${params.vault_secret_name}'
                        """
                        )
                }
            }
        }
    }
    post {
        success {
            echo "The OpenIDL secrets deployment is successful. Review logs"
        }
        failure {
            echo "The OpenIDL secrets deployment is failed. Please investigate"
        }
    }
}

